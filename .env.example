# --- Django core ---
DJANGO_DEBUG=True
SECRET_KEY=change-me-to-a-long-random-string

# Comma-separated list of hostnames your app serves
ALLOWED_HOSTS=127.0.0.1,localhost
# Comma-separated full origins with scheme
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8080,http://localhost:8080

# --- Database selection ---
# Default to SQLite locally. Set to true if you want Postgres.
USE_POSTGRES=false

# --- Postgres (optional) ---
# If USE_POSTGRES=true, fill these from your Postgres provider (e.g., Neon or Render):
# POSTGRES_DB=
# POSTGRES_USER=
# POSTGRES_PASSWORD=
# POSTGRES_HOST=
# POSTGRES_PORT=5432
# POSTGRES_CONN_MAX_AGE=60
# PGSSLMODE=require  # For Neon

# --- Email (optional; comment out if unused) ---
# EMAIL_HOST_USER=your-gmail-address
# EMAIL_HOST_PASSWORD=your-gmail-app-password

# --- Dropbox (optional; if image uploads are used in production) ---
# DROPBOX_ACCESS_TOKEN=sl.xxxxx
